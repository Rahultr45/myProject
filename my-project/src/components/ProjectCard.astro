---
import type { Project } from '../types';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---
<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
  <h3 class="text-xl font-semibold text-primary mb-2">{project.title}</h3>
  <p class="text-gray-600 mb-4">{project.description}</p>
  <div class="flex space-x-2 mb-4">
    {project.technologies.map((tech: unknown) => (
      <span class="bg-gray-100 px-2 py-1 rounded text-sm text-gray-700">
        {tech}
      </span>
    ))}
  </div>
  <div class="flex space-x-4">
    <a 
      href={project.githubLink} 
      class="text-gray-700 hover:text-primary"
    >
      GitHub
    </a>
    <a 
      href={project.liveLink} 
      class="text-white bg-primary px-4 py-2 rounded hover:bg-blue-700 transition-colors"
    >
      Live Demo
    </a>
  </div>
</div>