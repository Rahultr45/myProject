---
import Layouts from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layouts title="Home">
  <Header />
  <main
    class="container mx-auto px-4 py-12 grid md:grid-cols-2 gap-8 items-center"
  >
    <div class="flex">
      <div>
        <h1 class="text-[30px] font-bold mb-4">Hi, I'm [Your Name]</h1>
        <p class="text-xl text-gray-700 mb-6">
          A passionate software developer creating innovative web solutions.
        </p>
        <div class="flex space-x-4">
          <a
            href="/projects"
            class="bg-primary text-white px-6 py-3 rounded hover:bg-blue-700 transition-colors"
          >
            View Projects
          </a>
          <a
            href="/contact"
            class="border border-primary text-primary px-6 py-3 rounded hover:bg-blue-50 transition-colors"
          >
            Contact Me
          </a>
        </div>
      </div>
      <div class="flex justify-center">
        <img
          src="/profile.jpg"
          alt="Profile"
          class="w-64 h-64 object-cover rounded-full shadow-lg"
        />
      </div>
    </div>
  </main>
</Layouts>
